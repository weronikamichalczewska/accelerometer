<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- X -->

    <SeekBar
        android:id="@+id/seekBarX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="1000"
        android:max="2000"
        />
    <TextView
        android:id="@+id/txtViAxisX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarX"
        android:text="@string/X_axis"
        android:gravity="center"

        />

    <!-- Y -->

    <SeekBar
        android:id="@+id/seekBarY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="1000"
        android:max="2000"
        />
    <TextView
        android:id="@+id/txtViAxisY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarY"
        android:text="@string/Y_axis"
        android:gravity="center"

        />

    <!-- Z -->

    <SeekBar
        android:id="@+id/seekBarZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="1000"
        android:max="2000"
        />
    <TextView
        android:id="@+id/txtViAxisZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarZ"
        android:text="@string/Z_axis"
        android:gravity="center"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/seekBarZ"
            android:text="@string/humidity_sensor"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/txtViHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@id/seekBarZ"
            android:text="@string/values"
            android:gravity="center"
            android:textColor="@color/blue"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/seekBarZ"
            android:text="@string/temperature_sensor"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/txtViTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@id/seekBarZ"
            android:text="@string/values"
            android:gravity="center"
            android:textColor="@color/red"
            />

    </LinearLayout>

</LinearLayout>